<div class="container py-4">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <h2 class="h3 text-center mb-4">Please choose the ones you want to delete â€¦</h2>

      <form method="POST" action="">
        {{#each dreams}}
        <div class="form-check mb-3">
          <input
            class="form-check-input"
            type="checkbox"
            id="dream-{{this._id}}"
            name="toDelete"
            value="{{this._id}}"
          >
          <label class="form-check-label d-block ms-2" for="dream-{{this._id}}">
            <div class="border rounded p-3 shadow-sm">
              <strong class="text-success text-capitalize">{{this.colorfulness}}</strong>
              <h5 class="mt-1 mb-1">{{this.title}}</h5>
              <div class="small text-muted mb-2">{{toDate this.date}}</div>
              <p class="mb-0">{{this.narration}}</p>
            </div>
          </label>
        </div>
        {{/each}}

        <button type="submit" class="btn btn-primary w-100 mt-3">
          Delete
        </button>
      </form>
    </div>
  </div>
</div>
