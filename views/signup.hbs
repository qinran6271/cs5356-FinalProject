
{{#if message}}
<div class="error">{{ message }}</div>
{{/if}}

<main class="form-signin w-100 m-auto">
	<form method="POST" action="signup">
		<h1 class="h3 mb-3 fw-normal" style="text-align: center">Please sign up ...</h1>
		<div class="form-floating">
			<input type="text" class="form-control" name="name" value="" placeholder="Nickname">
			<label for="name">Nickname</label>
		</div>
		<div class="form-floating">
			<input type="text-mid" class="form-control" name="username" value="" placeholder="Username">
			<label for="username">Username</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control" name="password" value="" placeholder="Password">
			<label for="password">Password</label>
		</div>
		<button class="w-100 btn btn-lg btn-primary" type="submit" value="Sign Up">Sign Up</button>
	</form>
</main>
