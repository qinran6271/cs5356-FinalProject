<div class="container py-4">
  <div class="row">
    <div class="col-12 col-md-8 col-lg-6 mx-auto">
      <h2 class="h3 text-center mb-4">Describe your dream...</h2>

      <form method="POST" action="">
        <div class="mb-3">
          <label for="title" class="form-label"><strong>TITLE</strong></label>
          <input
            id="title"
            name="title"
            type="text"
            class="form-control"
            placeholder="Give your dream a title …"
            value=""
            required
          >
        </div>

        <hr class="dashed">

        <div class="mb-3">
          <label for="date" class="form-label"><strong>DATE</strong></label>
          <input
            id="date"
            name="date"
            type="date"
            class="form-control"
            value=""
            required
          >
        </div>

        <hr class="dashed">

        <fieldset class="mb-3">
          <legend class="col-form-label"><strong>EMOTIONS</strong></legend>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="emotions"
              id="positive"
              value="positive"
              required
            >
            <label class="form-check-label" for="positive">Positive</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="emotions"
              id="negative"
              value="negative"
            >
            <label class="form-check-label" for="negative">Negative</label>
          </div>
        </fieldset>

        <hr class="dashed">

        <fieldset class="mb-3">
          <legend class="col-form-label"><strong>COLORFULNESS</strong></legend>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="colorfulness"
              id="colorful"
              value="colorful"
              required
            >
            <label class="form-check-label" for="colorful">Colorful</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="colorfulness"
              id="colorless"
              value="colorless"
            >
            <label class="form-check-label" for="colorless">Colorless</label>
          </div>
        </fieldset>

        <hr class="dashed">

        <div class="mb-4">
          <label for="narration" class="form-label"><strong>NARRATION</strong></label>
          <textarea
            id="narration"
            name="narration"
            class="form-control"
            rows="4"
            placeholder="Describe your dream …"
            required
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-100 btn btn-lg btn-primary"
        >
          Add Dream
        </button>
      </form>
    </div>
  </div>
</div>
